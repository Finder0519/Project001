<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context=".HousingDetailActivity">
        <ImageView
            android:id="@+id/travel_pic"
            android:src="@drawable/travel"
            android:layout_width="wrap_content"
            android:layout_height="200dp" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="景点标题:"
            android:textSize="30sp"/>
        <TextView
            android:id="@+id/travel_name_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="25sp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="景点介绍:"
            android:textSize="30sp"/>
        <TextView
            android:id="@+id/travel_descp_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="25sp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="游玩指南:"
            android:textSize="30sp"/>
        <TextView
            android:id="@+id/travel_guide_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="25sp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="门票价格:"
            android:textSize="30sp"/>
        <TextView
            android:id="@+id/travel_ticket_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="25sp"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <Button
                android:id="@+id/travel_comment_add"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="评论"/>
            <CheckBox
                android:id="@+id/travel_fav_add"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="收藏"/>
        </LinearLayout>
        <ListView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
    </LinearLayout>
</ScrollView>
